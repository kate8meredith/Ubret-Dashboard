*.unselectable {
   -moz-user-select: -moz-none;
   -khtml-user-select: none;
   -webkit-user-select: none;
   -ms-user-select: none;
   user-select: none;
}


body
  margin: 0
  padding: 0
  overflow: scroll

#ubret
  width 100%

  .dashboard
    margin-bottom 80px
    &:before,&:after
      content: ''
      display: table
    &:after
      clear: both

    .tools
      padding 10px

      .window
        position: relative
        width: 640px
        height: 480px
        background: rgba(255, 255, 255, 0.93)
        border: 1px $gray1 solid
        border-radius: 3px
        box-shadow(0 0 10px #ababab)
        padding: 10px
        padding-top: 20px
        overflow: hidden
        resize: both

        .settings
          width: 0
          float: left
          display: inline

        .tool
          display: inline
          width: inherit
          overflow: scroll

        .window-controls
          position: absolute
          top: 0
          left: 0
          width: 100%
          background: #f6f6f6
          border-bottom: 1px solid #ccc
          z-index: 2

          ul
            display: inline
            padding: 0 0 0 10px

            li
              display: inline
              padding-right: 20px

      .window.settings-active

        .settings
          width: 240px

  .toolbox
    border-top 1px $black solid
    background-color $white
    width 100%
    margin 0
    position fixed
    bottom 0
    left 0

    .tool
      float left
      margin 6px
      padding 6px

    .action
      float: right
      margin: 6px
      padding: 6px
