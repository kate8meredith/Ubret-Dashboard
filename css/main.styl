*.unselectable {
   -moz-user-select: -moz-none;
   -khtml-user-select: none;
   -webkit-user-select: none;
   -ms-user-select: none;
   user-select: none;
}


body
  margin: 0
  padding: 0
  overflow: scroll

#ubret
  width 100%

  .dashboard
    margin-bottom 80px
    &:before,&:after
      content: ''
      display: table
    &:after
      clear: both

    .tools
      padding 10px
      .window-container
        position: absolute
        overflow: hidden
        box-shadow(0 0 10px #ababab)
        resize: both

      .window
        width: 640px
        min-height: 200px
        background: rgba(255, 255, 255, 0.93)
        border: 1px $gray1 solid
        border-radius: 3px
        overflow: hidden

        .settings
          width: 240px
          position: absolute
          height: inherit
          transform: translateX(-250px)
          top: 20px

        .tool
          display: inline
          float: left
          overflow: auto
          position: absolute
          top: 20px
          transition()
          padding-top: 10px
          translateX(0px)
          width: inherit

        .window-controls
          position: relative
          width: 100%
          background: #f6f6f6
          border-bottom: 1px solid #ccc
          z-index: 2

          .window-title
            z-index: 1
            text-align: center

          ul
            position: absolute
            top: 0
            left: 0
            margin: 0
            padding: 0
            z-index: 2
            li
              float: left
              padding: 0 10px
              list-style: none

      .window.settings-active

        .settings
          transform: translateX(0px)

        .tool
          transform: translateX(250px)

  .toolbox
    border-top: 1px $black solid
    background-color: $white
    width: 100%
    margin: 0
    position: fixed
    bottom: 0
    left: 0
    z-index: 9999

    .tool
      float: left
      margin: 6px
      padding: 6px

    .action
      float: right
      margin: 6px
      padding: 6px
