*.unselectable {
   -moz-user-select: -moz-none;
   -khtml-user-select: none;
   -webkit-user-select: none;
   -ms-user-select: none;
   user-select: none;
}


body
  margin: 0
  padding: 0
  overflow: scroll

#ubret
  width 100%

  .dashboard
    margin-bottom 80px
    &:before,&:after
      content: ''
      display: table
    &:after
      clear: both

    .tools
      padding 10px
      .window-container
        position: absolute
        .tool
          width: inherit
        .settings
          position: absolute
          overflow: hidden
          top: 0
          left: 0
          width: 180px
          padding: 10px
          z-index: 0
          background: #f2f2f2
          border-left: 1px solid #ccc
          border-top: 1px solid #ccc
          border-bottom: 1px solid #ccc
          resize: none // Hack
          transform translateX(0)
          &.active
            transform translateX(-200px) 
          h2
            margin: 0
        .shadow
          position: relative
          z-index: 1
          box-shadow(0 0 10px #999)

      .window
        position: relative
        overflow: hidden
        width: 400px
        min-height: 200px
        padding: 10px
        background: rgba(255, 255, 255, 1)
        border-radius: 3px
        resize: both

      .window-controls
        position: relative
        width: 100%
        background: #f6f6f6
        border-bottom: 1px solid #ccc
        z-index: 2

        .window-title
          z-index: 1
          text-align: center

        ul
          position: absolute
          top: 0
          left: 0
          margin: 0
          padding: 0
          z-index: 2
          li
            float: left
            padding: 0 10px
            list-style: none
            &.active
              background: rgba(0, 0, 0, 0.25)
              color: #fff


  .toolbox
    border-top: 1px $black solid
    background-color: $white
    width: 100%
    margin: 0
    position: fixed
    bottom: 0
    left: 0
    z-index: 9999

    .tool
      float: left
      margin: 6px
      padding: 6px

    .action
      float: right
      margin: 6px
      padding: 6px
