.settings
  border-right: 1px solid $gray1
  transition()

  label
    display: block
    font-size: 12px

  input, select
    -webkit-appearance: none
    -moz-appearance: none
    -o-appearance: none
    appearance: none 
    margin-bottom: 5px
    font-size: 12px

  .source-data-box, .data-points, .submit
    display: none

  .source-choices
    height: 24px
    border: 1px solid #ccc
    font-size: 13px
    padding: 3px 5px

  h2
    font-size: 14px
    font-weight: 700

  .data-sources
    padding: 3px
    border-bottom: 1px solid #ccc
    list-style: none

    &:before, &:after
      content: ' '
      display: table
    &:after
      clear: both

    li
      float: left
      width: 75px
      height: 28px
      margin: 0 10px 0 0
      border: 1px solid #ccc
      border-radius: 3px 3px 0 0
      font-size: 12px
      line-height: 28px
      text-align: center
      vertical-align: middle

      &:last-child
        margin: 0

      &.selected
        background: #fafafa
        border: 1px solid #900 !important

      &:hover
        background: #fafafa
        border: 1px solid #555
        cursor: pointer


  .tools-options
    display: none
