.settings
  border-radius: 3px
  border: 1px $gray1 solid
  box-shadow(6px 6px 10px #ababab)
  height: inherit
  width: 300px
  padding: 10px
  -webskit-transition: right 0.5s ease-in-out
  -moz-transition: right 0.5s ease-in-out
  -o-transition: right 0.5s ease-in-out
  transition: right 0.5s ease-in-out

  label
    display: block

  .source-data-box, .data-points, .submit
    display: none

  .source-choices
    height: 24px
    border: 1px solid #ccc
    font-size: 13px
    padding: 3px 5px

  .data-sources
    margin: 0
    padding: 0
    &:before, &:after
      content: ' '
      display: table
    &:after
      clear: both
    li
      float: left
      width: 100px
      height: 50px
      margin: 0 10px 0 0
      border: 1px solid #ccc
      list-style: none
      line-height: 50px
      text-align: center
      &:hover
        background: #fafafa
        border: 1px solid #900
        cursor: pointer

  .tools-options
    display: none
