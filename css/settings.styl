.settings
  boarder-right: 1px solid $gray1
  -webskit-transition: width 0.5s ease-in-out
  -moz-transition: width 0.5s ease-in-out
  -o-transition: width 0.5s ease-in-out
  transition: width 0.5s ease-in-out
  overflow-y: scroll

  label
    display: inline
    font-size: 12px

  input, select
    margin-bottom: 5px
    font-size: 12px

  .source-data-box, .data-points, .submit
    display: none

  .source-choices
    height: 24px
    border: 1px solid #ccc
    font-size: 13px
    padding: 3px 5px

  h2
    font-size: 14px
    font-weight: 700

  .data-sources
    padding: 3px
    border-bottom: 1px solid #ccc
    list-style: none

    &:before, &:after
      content: ' '
      display: table
    &:after
      clear: both

    li
      width: 100px
      margin: 0 10px 0 0
      border: 1px solid #ccc
      text-align: center
      padding: 5px
      border-radius: 3px 3px 0 0
      display: inline
      font-size: 12px

      &:hover
        background: #fafafa
        border: 1px solid #900
        cursor: pointer

      &.selected
        border-bottom: 1px solid #fff

  .tools-options
    display: none
