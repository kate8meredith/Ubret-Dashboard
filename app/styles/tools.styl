.tool-container

  h2
    margin-top: 1

  h3
    box-sizing: border-box
    padding: 0 10px

  table
    border-collapse: collapse
    font-size: 12px
    border: 1px solid $mid-gray 
    padding 5px
    margin 5px

    td, th
      padding 5px
      border: 1px solid $mid-gray

    .selected
      background-color: $blue

    td
      overflow: hidden
      width: 105px

  .map
    height: 100%
    outline: 0

  .histogram
    width: inherit
    height: inherit

    svg
      .bar rect
        shape-rendering: crispEdges

      .bar text
        fill: white

      .axis path, .axis line
        shape-rendering: crispEdges
        stroke: black
        fill: none

  svg
    .axis
      path
        shape-rendering: crispEdges
        stroke: black
        fill: none
      text
        font-size: 14px
    text.label
      font-weight: 700

  .tooltip
    display: inline-block
    padding: 10px
    background: #fff
    border-radius: 3px
    box-shadow: 0 0 6px #000
    font-size: 12px
    ul
      margin: 0
      padding: 0
      li
        list-style: none
        clearfix()
        label
          float: left
          padding: 0 7px 0 0
          font-weight: 700
        span

.subject, .stats
  border-top: 1px solid $gray-less-dark
  box-sizing: border-box
  font-size: 12px
  margin: 15px 0

  &:first-child
    border-top-color: transparent
    margin: 0

  ul
    @extends #semantic-list
    
    li
      border-bottom: 1px solid $gray-light
      padding: 3px 0 3px 10px

      &:last-child
        border-bottom-color: transparent

      &.heading
        font-size: 1.1em
        font-weight: 700

      label
        float: left
        width: 85px

      span
        display: block
        margin-left: 105px

  img
    border-left: 10px solid $white
    border-bottom: 10px solid $white
    float: right
    max-width: 300px

