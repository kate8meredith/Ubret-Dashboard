$title-bar-vertical-padding = 0
$title-bar-height = 34px

.tool-window
  position: absolute
  min-width: 300px
  min-height: 150px
  background: #fff
  border-radius: 3px
  box-shadow: 0 0 13px #444

  .window
    position: relative
    width: 100%
    height: 100%
    overflow: hidden

    .title-bar
      position: absolute 
      top: 0
      left: 0
      width: 100%
      height: $title-bar-height
      padding: $title-bar-vertical-padding 0
      z-index: 3
      background: $mid-gray
      line-height: 34px

      span
        padding: 0 3px
        cursor: pointer

      input
        display: none
      
  .tool-container
    position: absolute
    top: $title-bar-height + ($title-bar-vertical-padding * 2)
    width: 100%
    height: 100%

  .resize
    position: absolute
    $size = 8px
    &.corner
      width: $size
      height: $size
      z-index: 5
      &.top.left
        cursor: nw-resize
      &.top.right
        cursor: ne-resize
      &.bottom.right
        cursor: se-resize
      &.bottom.left
        cursor: sw-resize

    &.bar
      z-index: 4
      &.top
        cursor: n-resize
      &.right
        cursor: e-resize
      &.bottom
        cursor: s-resize
      &.left
        cursor: w-resize

    &.top
      top: -($size / 2)
      height: $size
      &.bar
        width: 100%

    &.bottom
      bottom: -($size / 2)
      height: $size
      &.bar
        width: 100%

    &.right
      right: -($size / 2)
      width: $size
      &.bar
        top: 0
        height: 100%

    &.left
      left: -($size / 2)
      width: $size
      &.bar
        top: 0
        height: 100%

