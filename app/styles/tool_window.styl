$title-bar-vertical-padding = 0
$title-bar-height = 25px

.tool-window
  background: #fff
  border: 1px solid $white
  border-radius: 3px
  box-shadow: 0 0 13px #444
  min-height: 150px
  min-width: 300px
  position: absolute

  .window
    position: relative
    width: 100%
    height: 100%
    overflow: hidden

    .title-bar
      background: $gray-dark
      color: $white
      height: $title-bar-height
      line-height: $title-bar-height
      position: absolute
      top: 0
      width: 100%
      z-index: 3

      span
        padding: 0 3px
        cursor: pointer

      input
        display: none
      
  .tool-container
    position: absolute
    top: 0
    width: 100%
    padding-top: $title-bar-height + ($title-bar-vertical-padding * 2)
    overflow-y: scroll

  .resize
    position: absolute
    $size = 8px
    &.corner
      width: $size
      height: $size
      z-index: 5
      &.top.left
        cursor: nw-resize
      &.top.right
        cursor: ne-resize
      &.bottom.right
        cursor: se-resize
      &.bottom.left
        cursor: sw-resize

    &.bar
      z-index: 4
      &.top
        cursor: n-resize
      &.right
        cursor: e-resize
      &.bottom
        cursor: s-resize
      &.left
        cursor: w-resize

    &.top
      top: -($size / 2)
      height: $size
      &.bar
        width: 100%

    &.bottom
      bottom: -($size / 2)
      height: $size
      &.bar
        width: 100%

    &.right
      right: -($size / 2)
      width: $size
      &.bar
        top: 0
        height: 100%

    &.left
      left: -($size / 2)
      width: $size
      &.bar
        top: 0
        height: 100%

