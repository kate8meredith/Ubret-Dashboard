.tool-window
  position: absolute
  min-width: 300px
  min-height: 150px
  background: #fff
  border-radius: 3px
  box-shadow: 0 0 13px #444

  .window
    position: relative
    width: 100%
    height: 100%
    overflow: hidden

  .title-bar
    position: relative 
    top: 0
    left: 0
    width: inherit
    height: 20px
    padding: 7px 9px
    z-index: 3
    background: $mid-gray

    span
      padding: 0 3px
      cursor: pointer

    input
      display: none
      
  .settings
    display: inline-block
    position: absolute
    right: 0
    width: 200px
    padding: 5px
    z-index: 2
    border-left: 1px solid $mid-gray
    background: darken(rgba(255,255,255,0.8), 17%)
    transform(translateX(210px))
    transition-transform(0.3s, cubic-bezier(0.0, 0.0, 0.35, 1.0))

  .tool-container
    height: 100%

  &.settings-active
    .settings
      transform(translateX(0))

  &.unselectable
    -moz-user-select: -moz-none
    -khtml-user-select: none
    -webskit-user-select: none
    -ms-user-select: none
    user-select: none

  .resize
    position: absolute
    $size = 8px
    &.corner
      width: $size
      height: $size
      z-index: 5
      &.top.left
        cursor: nw-resize
      &.top.right
        cursor: ne-resize
      &.bottom.right
        cursor: se-resize
      &.bottom.left
        cursor: sw-resize

    &.bar
      z-index: 4
      &.top
        cursor: n-resize
      &.right
        cursor: e-resize
      &.bottom
        cursor: s-resize
      &.left
        cursor: w-resize

    &.top
      top: -($size / 2)
      height: $size
      &.bar
        width: 100%

    &.bottom
      bottom: -($size / 2)
      height: $size
      &.bar
        width: 100%

    &.right
      right: -($size / 2)
      width: $size
      &.bar
        top: 0
        height: 100%

    &.left
      left: -($size / 2)
      width: $size
      &.bar
        top: 0
        height: 100%

