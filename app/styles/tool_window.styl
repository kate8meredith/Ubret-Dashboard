.tool-window
  position: absolute
  display: inline-block
  box-shadow: 0 0 13px #444
  background: #fff

  .title-bar
    position: absolute
    top: 0
    left: 0
    background: $mid-gray
    width: inherit
    z-index: 2
    height: 20px

    input
      display: none
      
  .settings
    width: 200px
    position: absolute
    border-right: 1px solid $light-gray
    display: none
    z-index: 1
    padding: 5px
    top: 20px
    background: #fff

  .tool-container
    z-index: 1
    padding: 5px
    position: absolute
    left: 0
    top: 20px
    background: #fff
    overflow: none

  &.settings-active
    .settings
      display: inline-block 

    .tool-container
      left: 210px

  &.unselectable
    -moz-user-select: -moz-none
    -khtml-user-select: none
    -webskit-user-select: none
    -ms-user-select: none
    user-select: none
