.tool-window
  position: absolute
  display: inline-block
  border: 1px solid $light-gray
  box-shadow: 0 0 13px #444

  .title-bar
    position: absolute
    top: 0
    left: 0
    background: $mid-gray
    width: inherit
    z-index: 2

    input
      display: none
      
  .settings
    width: 200px
    height: 100%
    position: absolute
    border-right: 1px solid $light-gray
    display: none
    z-index: 1

  .tool-container
    width: inherit
    height: 100%
    z-index: 1
    padding: 5px
    position: absolute
    left: 0

  &.settings-active
    .settings
      display: inline-block 

    .tool-container
      left: 200px
