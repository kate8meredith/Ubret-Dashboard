
.main-focus
  @extends .container

  .loading-page
    font-size: 24px
    text-align: center
    width: 100%

    .loading
      display: inline-block

      p
        display: inline-block

      img
        position: relative
        top: 22px


// Saved Dashboards
.dashboards
  overflow-y: scroll
  max-height: 800px
  clearfix()
  > ul
    box-sizing: border-box
    float: left
    padding: 8px 0
    text-align: center
    width: 33%
    @extends #semantic-list
    li
      .title
        font-weight: 700
      .meta
        color: $gray
        font-style: italic

      ul
        @extends #button-row

        li
          position: relative 
          
          .sharer 
            position: absolute 
            left: -68px
            top: 30px
            width: 200px

            div.url
              display: none

            &.active-url
              div.url
                display: block 
          

.toolbox
  height: 50px
  padding-bottom: 20px
  @extends #rule-below

  ul
    list-style: none
    margin: 0
    padding: 0

    li
      float: left

      a
        display: block
        padding: 6px 6px
        min-width: 90px
        @extends #standard-button

  ul.tools
    float: left

  ul.interactions
    float: right

  .dashboard-name
    float: right

  input
    display: none
    width: 200px
    float: right
    
.index
  text-align: center
  margin: 0 auto
  display: inline-block
  border: 1px solid $mid-gray
  padding: 30px
  top: 40%
  left: 35%


.snap
  position: absolute 
  border: 10px solid rgba(255, 186, 0, 0.6)
  background-color: rgba(255, 255, 255, 0.1)
  z-index: 9999
  &.right
    top: 168px
    right: 0
  &.left
    top: 168px
    left: 0
  &.top-left
    top: 168px
    left: 0
  &.top-right
    top: 168px
    right: 0
  &.full
    top: 168px
    left: 0
  &.bottom-right
    bottom: 50px
    right: 0
  &.bottom-left
    left: 0
    bottom: 50px
