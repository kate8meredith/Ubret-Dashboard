.toolbox
  height: 50px
  padding-bottom: 20px
  @extends #rule-below

  ul
    list-style: none
    margin: 0
    padding: 0

    li
      float: left

      a
        display: block
        padding: 6px 0
        width: 90px
        @extends #standard-button

  ul.tools
    float: left

  ul.interactions
    float: right

    li:first-child
      border-left: 1px solid $mid-gray

.index
  text-align: center
  margin: 0 auto
  display: inline-block
  border: 1px solid $mid-gray
  padding: 30px
  top: 40%
  left: 35%

.saved-list
  display: none

  &.active
    display: block


