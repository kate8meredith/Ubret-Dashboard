.toolbox
  position: absolute
  bottom: 0
  left: 0
  margin: 0
  height: 80px
  border-top: 1px solid $mid-gray
  background: #fff
  width: 100%

  .tool-icon
    height: inherit
    display: inline-block
    float: left
    padding: 10px

  .remove-tools
    height: inherit
    display: inline-block
    float: right
    padding: 10px
