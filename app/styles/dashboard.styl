.main-focus
  @extends .container

  .loading-page
    font-size: 24px
    text-align: center
    width: 100%

    .loading
      display: inline-block

      p
        display: inline-block

      img
        position: relative
        top: 22px


// Saved Dashboards
.dashboards
  overflow-y: scroll
  clearfix()
  > ul
    box-sizing: border-box
    float: left
    padding: 8px 0
    text-align: center
    width: 33%
    @extends #semantic-list
    li
      .title
        font-weight: 700
      .meta
        color: $gray
        font-style: italic

      ul
        @extends #button-row

        li
          position: relative 
          
          .sharer 
            position: absolute 
            left: -68px
            top: 30px
            width: 200px

            div.url
              display: none

            &.active-url
              div.url
                display: block 
          

.toolbox
  position: aboslute

  .drawers
    transition: transform 0.5s ease-in-out  
    top: 14px
    position: absolute 
    z-index: 998

    &.active
      transform: translateY(38px)

  .drawer
    background: $light-gray
    height: 28px
    padding: 5px
    border: 1px solid black
    display: inline-block
    position: absolute
    width: 850px
    z-index: 1

    &.active
      z-index: 2

  ul.sources, ul.tools, ul.layouts
    list-style: none
    margin: 0
    padding: 0

    li
      float: left

      a
        display: block
        padding: 6px 6px
        min-width: 90px
        @extends #standard-button

  ul.interactions
    list-style: none
    margin: 0
    padding: 0
    position: absolute
    top: 39px
    width: 400px
    transition: transform 0.5s ease-in-out
    z-index: 2

    li
      padding-top: 3px
      border: 1px solid black
      width: 75px
      display: inline-block
      text-align: center
      background: $light-gray
      font-weight: 700
      z-index: 1

      &.active
       z-index: 3 
       border-top: 1px solid $light-gray

      a
        color: black
 
  .dashboard-name
    background: none
    padding: 5px
    width: 400px
    text-align: right
    font-weight: 700
    position: absolute
    left: 600px
    top: 54px

  input
    display: none
    width: 300px
    float: right
    
.index
  text-align: center
  margin: 0 auto
  display: inline-block
  border: 1px solid $mid-gray
  padding: 30px
  top: 40%
  left: 35%
