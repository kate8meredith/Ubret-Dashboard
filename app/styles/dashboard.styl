.toolbox
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  height: 50px
  margin: 0
  z-index: 9999
  background: #fff
  border-top: 1px solid $mid-gray

  .tool-icon
    height: inherit
    display: inline-block
    float: left
    padding: 10px 2px

  .remove-tools
    height: inherit
    display: inline-block
    float: right
    padding: 10px
