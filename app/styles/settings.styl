
.settings
  background: $gray-dark
  border-left: 1px solid $black
  box-sizing: border-box
  color: $white
  height: 100%
  padding: 35px 29px
  position: absolute
  right: -234px
  top: 0
  transition: all 0.4s cubic-bezier(0.0, 0.0, 0.35, 1.0)
  width: 234px
  z-index: 4

  .toggle
    background: url(../images/settings-toggle.png) no-repeat 4px 4px
    cursor: pointer
    height: 16px
    left: -24px
    position: absolute
    transform: rotate(180deg)
    transition: all 0.4s cubic-bezier(0.0, 0.0, 0.35, 1.0)
    top: 4px
    width: 20px

  &.active
    right: 0
    .toggle
      left: 4px
      transform: rotate(0)
    
  .data-settings
    ul
      list-style: none

    .params
      > div
        padding: 5px 0

    .range
      .value
        position: absolute
        bottom: 3px
        width: 100%
        font-size: 0.9em
        text-align: center

      .track
        position: relative
        height: 30px
        border-bottom: 1px solid #c0c0c0
        span
          position: absolute
          bottom: -6px
          width: 10px
          height: 10px
          z-index: 1
          background: #900
          border-radius: 10px
          cursor: pointer
        .min, .max
          position: absolute
          bottom: 3px
          z-index: 1
          color: #666
          font-size: 0.8em
        .min
          left: 0
        .max
          right: 0
