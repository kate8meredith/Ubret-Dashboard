.zooniverse-window
  .container
    height: inherit 

    .id-list
      width: 40%
      float: left
      height: inherit
      overflow-y: scroll

      ul
        list-style: none
        margin: 0
        padding: 0
        margin-bottom: 25px

        li
          width: 100%
          padding: 5px
          border-bottom: 1px solid black
          margin: 0

          a
            color: black

          &.selected
            background-color: $blue

        &:last-child
          border-bottom: none

          .remove
            float: right 
            padding-right: 10px

    .sources
      width: 55%
      padding-left: 10px
      float: right

      ul
        @extends #button-row

      button
        border-radius: 3px 
        margin-top: 5px
        display: block
        @extends #bold-button

      div
        display: none

      .active
        display: block

