<span class="window-min"></span>
<span class="window-close"></span>
<span class="window-title">
  <%- @name %>
</span>

<% if @link: %>
  <span class="link">
    <span class="loading"> Loading </span>
    <%- @link %>
  </span>
<% end %>

<span class="loading window-loading"></span>
<span class="loading-error">Error Loading Tool Data</span>

<input type="text" name="window-title" value="<%- @name %>">
