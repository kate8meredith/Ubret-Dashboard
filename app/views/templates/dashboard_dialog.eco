<div class="dashboard-dialog">
  <div class="dialog-header">
    <span class="window-close"></span>
    <span class="window-title">Create New Dashboard</span>
  </div>
  <div class="dialog-content">
    <form class="new-dashboard">
      <div>
        <label for="name" class="dialog-label">Dashboard Name
          <input id="name" type="text" />
        </label>
      </div>
      <div>
        <label for="project_type" class="dialog-label">Project
          <select id="project_type">
            <% for key, value of @projects: %>
              <% if key is @selected: %>
                <option value="<%- key %>" selected><%- value %></option>
              <% else: %>
                <option value="<%- key %>"><%- value %></option>
              <% end %>
            <% end %>
          </select>
        </label>
      </div>
    </form>
  </div>
  <div class="dialog-footer">
    <button class="close cancel">Cancel</button>
    <button class="new-dashboard">Create Dashboard</button>
  </div>
</div>
