<% label = require('./label')(@) %>

<div class="columns">
  <div class="column one-quarter"><%- label %></div>
  <div class="column three-quarters">
    <select data-cid="<%- @.cid %>">
      <% for opt in @get('options'): %>
        <option value="<%- opt %>" <%- 'selected' if opt is @get('val') %> ><%- opt %></option>
      <% end %>
    </select>
  </div>
</div>