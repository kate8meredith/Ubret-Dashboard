<% for tool in @tools: %>
  <div class="tool" data-id="<%- tool.name %>">
    <button type="button" name="<%- tool.name %>"><%- tool.name %></button>
  </div>
<% end %>

<div class="save-state action">
  <button type="button" name="save-state">Save State</button>
</div>
<div class="remove-tools action">
	<button type="button" name="remove-tools">Clear Tools</button>
</div>